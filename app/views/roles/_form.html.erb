<%= form_for @role, :html => { :class => "form-horizontal role" } do |f| %>

  <% if @role.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@role.errors.count, "error") %> prohibited this role from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @role.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nombre_rol, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nombre_rol, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nombre_rol) %>
  </div>
  
  <div class="form-group">
    <%= f.label :area_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :area_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:area_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                roles_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
