<%= form_for @user, :html => { :class => "form-horizontal user" } do |f| %>

  <% if @user.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nombre, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nombre, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nombre) %>
  </div>
  <div class="form-group">
    <%= f.label :apellido, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :apellido, :class => 'form-control' %>
    </div>
    <%=f.error_span(:apellido) %>
  </div>
  <div class="form-group">
    <%= f.label :telefono, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :telefono, :class => 'form-control' %>
    </div>
    <%=f.error_span(:telefono) %>
  </div>
  <div class="form-group">
    <%= f.label :direccion, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :direccion, :class => 'form-control' %>
    </div>
    <%=f.error_span(:direccion) %>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%=f.error_span(:email) %>
  </div>
  <div class="form-group">
    <%= f.label :tipo_identificacion, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :tipo_identificacion, :class => 'form-control' %>
    </div>
    <%=f.error_span(:tipo_identificacion) %>
  </div>
  <div class="form-group">
    <%= f.label :identificacion, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :identificacion, :class => 'form-control' %>
    </div>
    <%=f.error_span(:identificacion) %>
  </div>
  <div class="form-group">
    <%= f.label :usuario, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :usuario, :class => 'form-control' %>
    </div>
    <%=f.error_span(:usuario) %>
  </div>
  <div class="form-group">
    <%= f.label :contrasena, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :contrasena, :class => 'form-control' %>
    </div>
    <%=f.error_span(:contrasena) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
